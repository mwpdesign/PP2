{
  "phi_protection": {
    "encryption_required": true,
    "min_encryption_strength": 256,
    "allowed_encryption_algorithms": ["AES-256-GCM", "RSA-4096"],
    "key_rotation_days": 90,
    "data_retention_years": 6,
    "data_backup": {
      "frequency_hours": 24,
      "encryption_required": true,
      "retention_years": 6,
      "test_recovery_frequency_days": 30
    }
  },
  "access_control": {
    "min_password_length": 12,
    "password_history_size": 12,
    "max_password_age_days": 90,
    "required_password_complexity": {
      "uppercase": true,
      "lowercase": true,
      "numbers": true,
      "special_chars": true
    },
    "max_failed_login_attempts": 5,
    "lockout_duration_minutes": 30,
    "session_timeout_minutes": 30,
    "mfa_required": true,
    "mfa_settings": {
      "allowed_methods": ["totp", "sms", "email"],
      "preferred_method": "totp",
      "backup_codes_allowed": true,
      "num_backup_codes": 10
    }
  },
  "audit_logging": {
    "log_sensitive_operations": true,
    "retention_days": 2190,
    "log_fields": [
      "timestamp",
      "user_id",
      "operation_type",
      "resource_type",
      "resource_id",
      "ip_address",
      "user_agent",
      "request_method",
      "request_path",
      "response_status",
      "phi_accessed",
      "territory_id",
      "organization_id"
    ],
    "phi_access_logging": {
      "require_reason": true,
      "allowed_reasons": [
        "TREATMENT",
        "PAYMENT",
        "OPERATIONS",
        "EMERGENCY",
        "PATIENT_REQUEST",
        "LEGAL_REQUIREMENT"
      ],
      "require_patient_consent": true,
      "log_data_access_type": true
    }
  },
  "data_transmission": {
    "min_tls_version": "1.2",
    "allowed_protocols": ["TLS 1.2", "TLS 1.3"],
    "required_cipher_suites": [
      "TLS_AES_256_GCM_SHA384",
      "TLS_CHACHA20_POLY1305_SHA256"
    ],
    "hsts_enabled": true,
    "hsts_max_age_days": 365,
    "secure_file_transfer": {
      "allowed_protocols": ["sftp", "ftps"],
      "require_encryption": true,
      "max_file_size_mb": 100
    }
  },
  "emergency_access": {
    "break_glass_enabled": true,
    "break_glass_notification_required": true,
    "break_glass_audit_detail": "enhanced",
    "notification_recipients": [
      "privacy_officer",
      "security_officer",
      "department_head"
    ],
    "max_duration_minutes": 240,
    "require_post_access_review": true
  },
  "data_integrity": {
    "checksum_verification_required": true,
    "digital_signatures_required": true,
    "allowed_signature_algorithms": ["RSA-PSS-SHA256", "ECDSA-P256-SHA256"],
    "data_validation_rules": {
      "patient_identifiers": ["mrn", "ssn", "dob"],
      "required_fields": ["first_name", "last_name", "dob"],
      "format_validation": true
    }
  },
  "territory_compliance": {
    "geo_fencing_enabled": true,
    "allowed_territories": ["US", "CA"],
    "data_residency_rules": {
      "phi_storage_locations": ["us-east-1", "us-west-2"],
      "backup_locations": ["us-east-2", "us-west-1"]
    },
    "territory_specific_rules": {
      "US": {
        "data_retention_years": 6,
        "breach_notification_hours": 72
      },
      "CA": {
        "data_retention_years": 7,
        "breach_notification_hours": 48
      }
    }
  },
  "incident_response": {
    "breach_detection_enabled": true,
    "notification_timeframe_hours": 72,
    "required_notification_methods": ["email", "phone", "mail"],
    "incident_categories": [
      "unauthorized_access",
      "data_breach",
      "system_compromise",
      "ransomware",
      "lost_device"
    ],
    "response_team_roles": [
      "incident_commander",
      "security_lead",
      "privacy_officer",
      "legal_counsel",
      "communications_lead"
    ]
  }
} 