# Healthcare IVR Platform - Development Environment Configuration
# Generated configuration template

# Core Application
------------------
# Application name
# REQUIRED
PROJECT_NAME=Healthcare IVR Platform

# Application version in semver format
# OPTIONAL
VERSION=

# API version prefix
# REQUIRED
API_V1_STR=/api/v1

# Debug mode flag
# REQUIRED
DEBUG=True

# Application environment
# REQUIRED
ENVIRONMENT=development

# Security
----------
# JWT secret key for token signing
# REQUIRED
SECRET_KEY=CHANGE_ME_TO_SECURE_VALUE

# JWT signing algorithm
# REQUIRED
ALGORITHM=HS256

# JWT token expiration time in minutes
# REQUIRED
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Fernet encryption key for PHI data
# REQUIRED
ENCRYPTION_KEY=CHANGE_ME_TO_SECURE_VALUE

# Salt for encryption operations
# OPTIONAL
ENCRYPTION_SALT=CHANGE_ME_TO_SECURE_VALUE

# Database
----------
# PostgreSQL database connection URL
# REQUIRED
DATABASE_URL=

# Database host (alternative to DATABASE_URL)
# OPTIONAL
DB_HOST=

# Database port (alternative to DATABASE_URL)
# OPTIONAL
DB_PORT=

# Database name (alternative to DATABASE_URL)
# OPTIONAL
DB_NAME=

# Database user (alternative to DATABASE_URL)
# OPTIONAL
DB_USER=

# Database password (alternative to DATABASE_URL)
# OPTIONAL
DB_PASSWORD=CHANGE_ME_TO_SECURE_VALUE

# Authentication
----------------
# Authentication mode
# REQUIRED
AUTH_MODE=local

# Enable AWS Cognito authentication
# REQUIRED
USE_COGNITO=False

# AWS
-----
# AWS Region
# OPTIONAL
AWS_REGION=us-east-1

# CORS
------
# Allowed CORS origins (JSON array format)
# REQUIRED
BACKEND_CORS_ORIGINS=

# Development CORS origins
# OPTIONAL
DEV_CORS_ORIGINS=

# Features
----------
# Enable mock external services
# OPTIONAL
ENABLE_MOCK_SERVICES=False

# Enable demo mode with sample data
# OPTIONAL
ENABLE_DEMO_MODE=False

# Development
-------------
# Development database URL
# OPTIONAL
DEV_DATABASE_URL=

# LocalStack endpoint for local AWS testing
# OPTIONAL
LOCALSTACK_ENDPOINT=

# Password for demo users
# OPTIONAL
DEMO_USER_PASSWORD=CHANGE_ME_TO_SECURE_VALUE
