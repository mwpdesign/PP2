# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/healthcare_ivr
DATABASE_POOL_SIZE=20
DATABASE_POOL_MAX_OVERFLOW=30
DATABASE_ECHO=false

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# AWS KMS for Encryption
KMS_KEY_ID=your_kms_key_id
ENCRYPTION_KEY_ALIAS=alias/healthcare-ivr-encryption

# AWS Cognito
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_CLIENT_ID=your_client_id
COGNITO_CLIENT_SECRET=your_client_secret

# AWS S3 for Document Storage
S3_BUCKET_NAME=healthcare-ivr-documents
S3_REGION=us-east-1

# API Configuration
SECRET_KEY=your_super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
APP_NAME=Healthcare IVR Platform
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# HIPAA Compliance
AUDIT_LOGGING=true
PHI_ENCRYPTION=true
SECURITY_MONITORING=true

# External APIs
INSURANCE_API_BASE_URL=https://api.insuranceprovider.com
INSURANCE_API_KEY=your_insurance_api_key
INSURANCE_API_TIMEOUT=30

# Shipping APIs
UPS_API_KEY=your_ups_api_key
FEDEX_API_KEY=your_fedex_api_key
USPS_API_KEY=your_usps_api_key

# Notification Services
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn