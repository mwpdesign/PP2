# Healthcare IVR Platform - Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env files with real credentials to version control

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
PROJECT_NAME=Healthcare IVR Platform
VERSION=1.0.0
API_V1_STR=/api/v1
DEBUG=false
ENVIRONMENT=production

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_TO_STRONG_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Generate encryption key: python -c "import base64, os; print(base64.urlsafe_b64encode(os.urandom(32)).decode())"
ENCRYPTION_KEY=CHANGE_ME_TO_STRONG_ENCRYPTION_KEY
ENCRYPTION_SALT=CHANGE_ME_TO_STRONG_ENCRYPTION_SALT
ENABLE_LOCAL_ENCRYPTION=true

# JWT Configuration
JWT_SECRET_KEY=CHANGE_ME_TO_STRONG_JWT_SECRET
TOKEN_EXPIRY_MINUTES=60

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Production Database
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database_name

# Individual Database Components (alternative to DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=healthcare_ivr
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Authentication mode: "local" for development, "cognito" for production
AUTH_MODE=cognito
USE_COGNITO=true

# AWS Cognito Settings (required when USE_COGNITO=true)
AWS_COGNITO_USER_POOL_ID=your_cognito_user_pool_id
AWS_COGNITO_CLIENT_ID=your_cognito_client_id
COGNITO_CLIENT_SECRET=your_cognito_client_secret

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=

# AWS KMS for PHI Encryption
AWS_KMS_KEY_ID=your_kms_key_id

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Redis Configuration
REDIS_URL=redis://localhost:6379

# TinyMCE API Key (for rich text editor)
TINYMCE_API_KEY=your_tinymce_api_key

# Shipping Provider API Keys
UPS_API_KEY=your_ups_api_key
UPS_PASSWORD=your_ups_password
FEDEX_API_KEY=your_fedex_api_key
USPS_API_KEY=your_usps_api_key
USPS_PASSWORD=your_usps_password

# =============================================================================
# CORS AND FRONTEND CONFIGURATION
# =============================================================================
# Production CORS origins (comma-separated list)
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# Single frontend URL (fallback if BACKEND_CORS_ORIGINS not set)
FRONTEND_URL=https://app.healthcare-ivr.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_MOCK_SERVICES=false
ENABLE_DEMO_MODE=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true

# =============================================================================
# EXTERNAL SERVICE URLS
# =============================================================================
INSURANCE_API_URL=https://api.insurance-provider.com
PHARMACY_API_URL=https://api.pharmacy-provider.com
PROVIDER_API_URL=https://api.provider-network.com

# =============================================================================
# DEVELOPMENT ONLY SETTINGS
# =============================================================================
# These settings should only be used in development environments
# Set ENVIRONMENT=development to enable these

# Development CORS origins (comma-separated, only used when ENVIRONMENT=development)
DEV_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://localhost:8000

# Development database (only used when ENVIRONMENT=development)
DEV_DATABASE_URL=postgresql+asyncpg://your_dev_user:your_dev_password@localhost:5432/healthcare_ivr_dev

# LocalStack settings (for local AWS testing)
LOCALSTACK_ENDPOINT=http://localhost:4566

# =============================================================================
# DEMO/SAMPLE DATA CONFIGURATION
# =============================================================================
# Password for demo users created by sample data scripts
DEMO_USER_PASSWORD=your_secure_demo_password